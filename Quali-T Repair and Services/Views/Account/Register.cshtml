@model Quali_T_Repair_and_Services.ViewModels.CustomerViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>
<div class="jumbotron">
    <h2>Quali-<span class="t">T</span> Repairs & Services</h2>
    <h4 id="tight"><small><i>Good Service makes the difference</i></small></h4>
</div>

<div class="col-lg-12">
    <div class="panel panel-default forms" >
        @using (Html.BeginForm("Register", "Customer", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel-heading">
                <h4>Create a New Account</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6"> 
                        <div class="form-group">
                            @Html.HiddenFor(m => m.Customer.CustomerId)
                            @Html.LabelFor(m => m.Customer.Firstname, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.Firstname, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.Firstname)</span>
                            </div>
                            
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.Lastname, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.Lastname, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.Lastname)</span>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.UserName, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.UserName, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.UserName)</span>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.DateOfBirth, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9" >
                                @Html.TextBoxFor(m => m.Customer.DateOfBirth, new { @class = "form-control", @id = "dateofBirth" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.DateOfBirth)</span>
                            
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.Email, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.Email, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.Email)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.MobileNumber, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.MobileNumber, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.MobileNumber)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerAddress.BillingAddress, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.CustomerAddress.BillingAddress, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.CustomerAddress.BillingAddress)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.CustomerAddress.ShippingAddress, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.CustomerAddress.ShippingAddress, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.CustomerAddress.ShippingAddress)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.Password, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.Password, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.Password)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Customer.ConfirmPassword, new { @class = "col-md-3 control-label" })
                            <div class="col-md-9">
                                @Html.TextBoxFor(m => m.Customer.ConfirmPassword, new { @class = "form-control" })
                                <span class="text-danger">@Html.ValidationMessageFor(m => m.Customer.ConfirmPassword)</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="col-md-2 col-md-offset-10">
                                <input type="submit" class="btn btn-success" value="Submit" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script type="text/javascript">
        $(function () {
            $('#dateofBirth').datepicker({
                viewMode: 'years'
            });
        });
</script>

}

